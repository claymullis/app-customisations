#!/bin/sh

alias ls='ls -Gh' #enable colours and human-readable sizes

# app aliases
alias ftp='open -a /Applications/Yummy\ FTP.app/Contents/MacOS/Yummy\ FTP'
alias firefox='open -a /Applications/Firefox.app'
alias ff='firefox'

# Add darwinports and ~/.bin to PATH:
export PATH="$PATH:/opt/local/bin:/opt/local/sbin:$HOME/.bin"

# Add darwinports to MANPATH:
export MANPATH="$MANPATH:/opt/local/man"

# "copy working directory" (to the clipboard)
alias cwd='echo -n `pwd` | pbcopy; echo "Copied: `pwd`"'
