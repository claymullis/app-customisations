#!/usr/bin/bash

set -e
local="$(grep -l 'feed-for' *.xml)"
if [ "$(echo "$local" | wc -l)" -ne 1 ]; then
	echo "Couldn't find local feed!"
	exit 1
fi
cmd="$1"
if fgrep -q 'command name="'"$cmd"'"' "$local"; then
	shift 1
	set -x
	0install run --command="$cmd" "$local" "$@"
else
	set -x
	0install run "$local" "$@"
fi
