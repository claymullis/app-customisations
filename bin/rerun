#!/usr/bin/env python

import sys, os
import subprocess

def main(argv=None):
	if argv is None:
		argv = sys.argv[1:]
	
	if len(argv) == 0:
		print "usage: %s COMMAND" % (os.path.basename(__file__))
		sys.exit(1)

	print "running command: %s" % (' '.join(argv))

	while True:
		try:
			subprocess.call(argv)
			raw_input('\n    >> press return to play again (ctrl+c to quit) << ')
			print '\n\n\n'
		except KeyboardInterrupt:
			break

if __name__ == '__main__':
	main()

