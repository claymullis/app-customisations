#!/usr/bin/env python
# "local" ip: replace the last portion of your ip address with the input
import os, re, sys, commands

def usage():
	print >> sys.stderr, "Usage: %s n [eth_type=en]" % sys.argv[0]
	exit(1)

args = sys.argv[1:]

en_type = 'en'
if len(args) == 0 or len(args) > 2:
	usage()
try: n = args[0]
except ValueError: usage()
if len(args) == 2:
	en_type = args[1]

en_match = en_type
if not re.match('[0-9]$', en_match):
	en_match += '[0-9]'

local_ips = commands.getoutput("ifconfig | grep --after=2 '^%s:'" % en_match)
# print local_ips
lines = [line for line in local_ips.split("\n") if re.match('^\s*inet ', line)]
# print lines
ip = lines[0].split(' ')[1]
ip_parts = ip.split('.')
ip_parts[-1] = n
print '.'.join(ip_parts)