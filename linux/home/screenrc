bind = resize =
bind + resize +1
bind - resize -1
bind _ resize max
bind ^j next
bind ^k prev

screen -t "bash" 0 bash
screen -t "editor" 1 vim
screen -t "ipython" 2 ipython -p sh
screen -t "scratch" 3 bash
select 1

bind ' ' windowlist -b 
startup_message       off
defscrollback         3000
silencewait           15
activity              "activity in %n (%t) [%w:%s]~"
bell                  "bell     in %n (%t) [%w:%s]~"
vbell_msg             " *beep* "


