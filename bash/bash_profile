# colours
BLUE=`tput setf 1`
GREEN=`tput setf 2`
CYAN=`tput setf 3`
RED=`tput setf 4`
MAGENTA=`tput setf 5`
YELLOW=`tput setf 6`
WHITE=`tput setf 7`
GREY=`tput setf 0`
PS1='\[$GREY\][\T] \[$YELLOW\]\u\[$BLUE\]@\[$RED\]\h \[$BLUE\]\w/\[$GREEN\] \$\[$WHITE\] '

function title
{
  export PROMPT_COMMAND='echo -ne "\033]0;'"$@"'\007"'
  #$PROMPT_COMMAND
}

if [ `uname` == 'Darwin' ]; then
	source osx
else
	source linux
fi

source scm
source alias