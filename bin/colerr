#!/usr/bin/env python

import sys, os, re
import subprocess

def col(code):
	prefix='\x1b['
	suffix='m'
	return "%s%s%s" % (prefix, code, suffix)

red = col(31)
reset = col(0)

def surround(line, prefix=red, suffix=reset):
	"""
	surrounds a line with markers, placing them _inside_ whitespace
	
	>>> surround("line", '[',']')
	"[line]"
	>>> surround(" line \n", '[',']')
	" [line] \n"
	"""
	return re.sub("^(\s*)(.*?)(\s*)$", r"\1%s\2%s\3" % (prefix, suffix), line)


def main(argv=None):
	if argv is None:
		argv = sys.argv[1:]
	
	if len(argv) == 0:
		print "usage: %s COMMAND" % (os.path.basename(__file__))
		sys.exit(1)

	try:
		proc = subprocess.Popen(argv, stderr=subprocess.PIPE)
		while True:
			line = proc.stderr.readline()
			if not line:
				break
			print surround(line),
		proc.wait()
	except KeyboardInterrupt:
		try:
			proc.kill()
		finally:
			sys.exit(1)

if __name__ == '__main__':
	main()

