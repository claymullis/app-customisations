#!/usr/bin/env ruby

require 'webrick'

include WEBrick
def start_webrick(config = {})
  server = HTTPServer.new(config)
  yield server if block_given?
  ['INT', 'TERM'].each {|signal| 
    trap(signal) {server.shutdown}
  }
  server.start

end
  
start_webrick(:DocumentRoot => '.', :Port => 3000)

