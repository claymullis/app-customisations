#!/usr/bin/env python
import sys
import subprocess, os

targets = sys.argv[1:]
try:
	idx = targets.index('--')
except ValueError:
	cmd = []
else:
	cmd = targets[idx+1:]
	targets = targets[:idx]

# print repr({'cmd':cmd,'targets':targets})
rv = subprocess.Popen(['gup', '-u'] + targets).wait()
if rv != 0: sys.exit(rv)

try:
	idx = cmd.index('{}')
except ValueError:
	# just append
	cmd = cmd + targets
else:
	# replace {} with target(s)
	cmd = cmd[:idx] + targets + cmd[idx+1:]

# print repr({'cmd':cmd,'targets':targets})
os.execvp(cmd[0], cmd)

