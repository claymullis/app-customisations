#!/usr/bin/env ruby

$stdin.each do |line|
  puts( if line =~ /^\+(.*)$/
        "\e[32m#{$&}\e[0m" 
        elsif line =~ /^-(.*)$/
          "\e[31m#{$&}\e[0m" 
        elsif line =~ /^@(.*)$/
          "\e[36m#{$&}\e[0m" 
        elsif line =~ /^[^ \t](.*)$/
          "\e[36m#{$&}\e[0m" 
        else
          line
        end
      )
end

