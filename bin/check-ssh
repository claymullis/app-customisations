#!/usr/bin/env expect

set host [lrange $argv 0 0]
set password [lrange $argv 1 1]
set timeout 10
spawn ssh $host "echo ok"
match_max 100000
# Look for passwod prompt
set retcode 2
expect {
	"*?assword:*" {
		set retcode 0
		send -- "$password\r"
		send -- "\r"
		exp_continue
	}
	eof { exit 1 }
	"ok\r" { exit $retcode }
	timeout { exit 1 }
}
exit $retcode
